{
  "manifest_version": 3,
  "name": "Taskify",
  "version": "1.0",
  "description": "A simple website blocker",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
    
  }
}
